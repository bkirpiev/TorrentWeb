@using SitefinityWebApp.Mvc.Models
@model TorrentModel

<link href="~/Content/site.css" rel="stylesheet" />

<h1 class="border-bottom mb-3">Add Torrent- @((string)ViewBag.ImageId)</h1>

@using (Html.BeginForm("Upsert", "AddTorrent", FormMethod.Post, new { id = "UpsertUser", enctype = "multipart/form-data" }))
{
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Title, new { @class = "font-weight-bold" })
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Title)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Genre, new { @class = "font-weight-bold" })
            @Html.DropDownListFor(m => m.Genre, (IEnumerable<SelectListItem>)ViewBag.Choices, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Genre)
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Image, new { @class = "font-weight-bold" })
            @Html.TextBoxFor(m => m.Image, new { @class = "form-control-file", type = "file" })
            @Html.ValidationMessageFor(m => m.Image)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.File, new { @class = "font-weight-bold" })
            @Html.TextBoxFor(m => m.File, new { @class = "form-control-file", type = "file" })
            @Html.ValidationMessageFor(m => m.File)
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.Description, new { @class = "font-weight-bold" })
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.AdditionalInfo, new { @class = "font-weight-bold" })
            @Html.TextBoxFor(m => m.AdditionalInfo, new { @class = "form-control" })
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Add Torrents</button>
    </div>
}
